<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color (white inside the input) -->
    <solid android:color="@android:color/white"/>

    <!-- Green border -->
    <stroke
        android:width="1.5dp"
        android:color="@color/primary" /> <!-- Green -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
